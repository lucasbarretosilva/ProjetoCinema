@model IEnumerable<ProjetoCinema.Models.Sessao>

@{
    ViewData["Title"] = "Index";
}

<h1>Gerenciador de Sessões</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Criar Nova Sessão</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSessao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Horario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HorarioFinal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Filme)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroSessao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorarioFinal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filme.FilmeNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.SalaId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.SessaoId">Edit</a> |
                <a asp-action="Details" class="btn btn-light" asp-route-id="@item.SessaoId">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.SessaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
