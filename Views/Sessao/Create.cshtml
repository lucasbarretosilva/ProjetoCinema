@model ProjetoCinema.Models.Sessao

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: center; ">Criando Sessão</h1>

<h4 style="text-align: center; ">Sessão</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form style=" width: 50vw; margin-left : 15vw; " asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumeroSessao" class="control-label"></label>
                <input asp-for="NumeroSessao" class="form-control" />
                <span asp-validation-for="NumeroSessao" class="text-danger"></span>
            </div>
            <div class="form-group">
              <label asp-for="FilmeId" class="control-label"></label>
                <select asp-for="FilmeId" class ="form-control" asp-items="ViewBag.FilmeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalaId" class="control-label"></label>
                <select asp-for="SalaId" class ="form-control" asp-items="ViewBag.SalaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorarioFinal" class="control-label"></label>
                <input asp-for="HorarioFinal" class="form-control" />
                <span asp-validation-for="HorarioFinal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Sessão" class="btn btn-primary" />
                 <a asp-action="Index" class="btn btn-primary">Voltar</a>
            </div>
        </form>
    </div>
</div>

<div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
