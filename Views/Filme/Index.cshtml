@model IEnumerable<ProjetoCinema.Models.Filme>

@{
    ViewData["Title"] = "Index";
}

<h1>Cadastro de Filmes</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Cadastrar novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilmeNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Legendado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dublado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FilmeNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Legendado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dublado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-dark" asp-route-id="@item.FilmeId">Editar</a> |
                <a asp-action="Details" class="btn btn-light" asp-route-id="@item.FilmeId">Detalhes</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.FilmeId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
